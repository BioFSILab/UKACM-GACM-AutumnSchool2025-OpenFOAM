domain
{
    xMin -10;
    xMax  15;
    zMin -5;
    zMax  5;

   
    zCells  35;                
    xUCells 9;                 
    xMCells 7;                 
    xDCells 35;               

    // grading
    zGrading    50;  
    xUGrading   5;             
    leadGrading 0.1;            
    xDGrading   10;             
}

aerofoil
{
    xLead   0;
    zLead   0;
    xTrail  1;
    zTrail  0;
    xUpper  0.3;
    zUpper  0.06;
    xLower  0.3;
    zLower -0.06;
}

geometry
{
    aerofoil
    {
        type   triSurfaceMesh;
        file   "NACA0012.obj";
    }
    cylinder
    {
        type   searchableCylinder;
        point1 (0.3 0 -10); // centre
        point2 (0.3  0 10); //centre
        radius 5;
    }
}

vertices
(
    project (0.3   -5 -0.1) (cylinder) //0
    (1   -5 -0.1) //1
    (15   -5 -0.1) //2

    project (-10 0 -0.1) (cylinder) //3
    project (0    0 -0.1) (aerofoil) //4
    project (1   0 -0.1) (aerofoil) //5
    (15   0 -0.1) //6

    project (0.3   -0.06 -0.1) (aerofoil) //7
    project (0.3   0.06 -0.1) (aerofoil) //8

    project (0.3   5 -0.1) (cylinder) //9
    (1   5 -0.1) //10
    (15   5 -0.1) //11

    project (0.3    -5 0.1) (cylinder) //12
    (1    -5 0.1) //13
    (15   -5 0.1) //14

    project (-10        0 0.1) (cylinder) //15
    project (0     0 0.1) (aerofoil) //16
    project (1    0 0.1) (aerofoil) //17
    (15   0 0.1) //18

    project (0.3    -0.06 0.1) (aerofoil) //19
    project (0.3    0.06 0.1) (aerofoil) //20

    project (0.3    5 0.1) (cylinder) //21
    (1    5 0.1) //22
    (15   5 0.1) //23
);

